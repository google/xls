module DynamicBitSliceAsFunction(
  input wire [31:0] x,
  input wire [31:0] y,
  input wire [31:0] z,
  input wire [15:0] w
);
  function automatic reg [4:0] dynamic_bit_slice_w5_32b_32b (input reg [31:0] operand, input reg [31:0] start);
    reg [36:0] zexted_operand;
    begin
      zexted_operand = {5'h00, operand};
      dynamic_bit_slice_w5_32b_32b = start >= 6'h20 ? 5'h00 : zexted_operand[start +: 5];
    end
  endfunction
  function automatic reg [9:0] dynamic_bit_slice_w10_16b_32b (input reg [15:0] operand, input reg [31:0] start);
    reg [25:0] zexted_operand;
    begin
      zexted_operand = {10'h000, operand};
      dynamic_bit_slice_w10_16b_32b = start >= 5'h10 ? 10'h000 : zexted_operand[start +: 10];
    end
  endfunction
  wire [4:0] dyn_slice_x_y_5;
  wire [4:0] dyn_slice_y_z_5;
  wire [9:0] dyn_slice_w_z_10;
  assign dyn_slice_x_y_5 = dynamic_bit_slice_w5_32b_32b(x, y);
  assign dyn_slice_y_z_5 = dynamic_bit_slice_w5_32b_32b(y, z);
  assign dyn_slice_w_z_10 = dynamic_bit_slice_w10_16b_32b(w, z);
endmodule
